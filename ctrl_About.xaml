<UserControl x:Class="Free_Gamma.ctrl_About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Free_Gamma"
             mc:Ignorable="d" 
             MinHeight="200" Width="340" Margin="10" Background="White" Visibility="Visible" UseLayoutRounding="True">
    <UserControl.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="7"/>
    </UserControl.Effect>
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Free Gamma" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Rectangle Height="10"/>
            <TextBlock Text="Adjust and calibrate your screen effectively by adjusting response ramp using segments-graph (freely adjustable points)." HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Foreground="#FF0036A0"/>
            <Rectangle Height="10"/>
            <TextBlock Text="Abdulrahman A. Badry (Itqan)" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
